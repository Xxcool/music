
.ranking-panel .item{
	position: relative;
	z-index: 1;
	margin-bottom: 30rpx;
}
.ranking-panel .item .ranking-name{
	position: absolute;
	bottom:0;
	left: 0;
	z-index: 2;
	padding: 15rpx;
	width: 100%;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	white-space: nowrap;
	font-size: 22rpx;
	color: #fff;
	background: rgba(0, 0, 0, 0.3);
	border-radius: 0rpx 0rpx 10rpx 10rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.ranking-panel .item .ranking-pic {
	max-width: 100%;
	border-radius: 10rpx;
	-webkit-box-shadow: 0 0 10px hsla(0, 0%, 51%, 0.3);
	        box-shadow: 0 0 10px hsla(0, 0%, 51%, 0.3);
	height: 212rpx;
}

